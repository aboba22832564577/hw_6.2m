<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ryt"
    tools:context=".MainActivity">



     <TextView
         android:textStyle="bold"
        android:id="@+id/text"
        android:textSize="16sp"
        android:layout_marginBottom="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:text="Забыли пароль?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:textStyle="bold"
        android:id="@+id/bottom1"
        android:layout_marginBottom="10dp"
        android:padding="14dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/seriy"
        android:textColor="@color/white"
        android:text="Войти"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:inputType="textPassword"
        android:id="@+id/editText1"
        android:padding="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottom1"
        android:background="@drawable/bg_edit2_user"
        android:hint="Введите пароль"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


   <EditText
       android:hint="Введите вашу почту"
       android:id="@+id/editText2"
       android:padding="14dp"
       android:layout_marginEnd="20dp"
       android:layout_marginStart="20dp"
       android:layout_marginBottom="10dp"
       app:layout_constraintBottom_toTopOf="@id/editText1"
       android:background="@drawable/bg_edit2_user"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="60dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/editText2"
        app:layout_constraintStart_toStartOf="@id/editText2"
        app:layout_constraintBottom_toTopOf="@id/editText2"
        android:id="@+id/text1"
        android:textColor="@color/white"
        android:text="или зарегистрируйтесь."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginBottom="2dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/text1"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintBottom_toTopOf="@id/text1"
        android:id="@+id/text2"
        android:textColor="@color/white"
        android:text="Выполните вход"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/text2"
        app:layout_constraintStart_toStartOf="@id/text2"
        app:layout_constraintBottom_toTopOf="@id/text2"
        android:id="@+id/text3"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:text="Добро пожаловать!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/text4"
        android:text="Вход"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>